{
  "packages": [
    "components/*",
    "packages/*"
  ],
  "version": "independent",
  "npmCLient": "yarn",
  "changelogPreset": "./changelog.config.js",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "message": "chore(release): publish",
      "allowBranch": ["main"]
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  }
}
